document.getElementById('content').innerHTML = "";
document.getElementById("content").insertAdjacentHTML("beforeend", "<%= j render 'show', email: @email %>");
if (<%= @email.read %>) {
  document.getElementById('btn-read').innerHTML = "Mark as not read";
  document.getElementById('<%= @email.id %>').classList.add("bg-primary");
} else {
  document.getElementById('btn-read').innerHTML = "Mark as read";
  document.getElementById('<%= @email.id %>').classList.remove("bg-primary");
}